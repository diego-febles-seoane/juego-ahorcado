<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550" prefWidth="300" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="es.diegofeblesseoane.ahorcado.frontend.controller.registroController">
    
    <VBox alignment="CENTER" layoutX="25" layoutY="20" prefWidth="250" spacing="15">
   
              <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registro de Usuario" />
   
                 <TextField fx:id="usernameField" maxWidth="200" promptText="Usuario" />
        <TextField fx:id="emailField" maxWidth="200" promptText="Correo electrónico" />
        <TextField fx:id="confirmEmailField" maxWidth="200" promptText="Confirmar correo" />
        <PasswordField fx:id="passwordField" maxWidth="200" promptText="Contraseña" />
        <PasswordField fx:id="confirmPasswordField" maxWidth="200" promptText="Confirmar contraseña" />
   
        <Button fx:id="btnRegistrar" maxWidth="200" onAction="#handleRegistrar" style="-fx-background-color: #888; -fx-text-fill: white;" text="Registrar" />
        <Button fx:id="btnCancelar" maxWidth="200" onAction="#handleCancelar" style="-fx-background-color: #888; -fx-text-fill: white;" text="Cancelar" />
    </VBox>
</AnchorPane>
